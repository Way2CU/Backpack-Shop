<document>

  <!-- Display page title of category page -->
  <cms:if condition="isset($template['page_title'])">
    <cms:var param="title" multilanguage="yes"/>
  </cms:if>

  <!-- Display regular title as text -->
  <cms:if condition="!isset($template['page_title'])">
    <h2><cms:var param="title" multilanguage="yes"/></h2>
  </cms:if>
</document>