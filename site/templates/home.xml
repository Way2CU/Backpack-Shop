<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="shop" action="include_cart_scripts"/>
			<cms:collection include="page_control,communicator,dialog"/>
			<cms:script src="_BASEURL.'/site/scripts/floating_menu.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Top section of site -->
			<cms:template file="parts/header.xml"/>

			<!-- Home page top section -->
			<div class="intro">
				<h1><cms:text constant="title_header_slogan"/></h1>
			</div>
			<cms:desktop>
				<section>
					<div id="slider">
						<!-- Slider images and controls -->
						<cms:module
							name="gallery"
							action="show_image_list"
							group="slider_images"
							limit="3"
							template="parts/slider.xml"
							/>
					</div>
				</section>
			</cms:desktop>

				<!-- Promoted products -->
			<section class="promoted">
				<cms:module
					name="shop"
					action="show_item_list"
					category="dakine"
					template="parts/category_products.xml"
					/>
				<cms:module
					name="shop"
					action="show_item_list"
					category="dakine"
					template="parts/category_products.xml"
					/>
				<cms:module
					name="shop"
					action="show_item_list"
					category="dakine"
					template="parts/category_products.xml"
					/>
			</section>

			<!-- Features -->
			<section>
				<ul id="features">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="feature_images"
						template="parts/features.xml"
						/>
				</ul>
			</section>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
